<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(products.length > 0){ %>
                <div class="grid">
                    <% for (let product of products) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= product.productId.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= product.productId.imageUrl %>" alt="<%= product.title %>">
                                <h1 class="product__title">
                                    Quantity: <%= product.quantity %>
                                </h1>
                            </div>
                            <div class="card__actions">
                                <form action="/delete-cart-items" method="post">
                                    <input value="<%= product.productId._id %>" type="hidden" name="productId"/>
                                    <button class="btn" type="submit">Delete</button>
                                </form>
                            </div>
                            </article>
                    <% } %>
                    </div>
                    <div class="centered">
                        <form action="/new-order" method="POST">
                            <button class="btn" type="submit">Order</button>
                        </form>
                    </div>
            <% } else { %>
                <div>No data found!</div>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>